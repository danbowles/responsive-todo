header
  div#task-entry
    form(ng-submit='createTodo()')
      input(type='text', ng-model='newTodo', placeholder='Almost forgot to...', autofocus)
      button(type='submit') +
        span &nbsp;Add
  div.go-to-nav
    a(href='#')
      i.fa.fa-2x.fa-bars
  nav
    ul
      li: a.all(href='#/all', ng-class='{active: isActive("/all")}') All Tasks
        span.count {{todos.length}}
      li: a.incomplete(href='#/incomplete', ng-class='{active: isActive("/incomplete")}') Incomplete
        span.count {{incompleteCount}}
      li: a.complete(href='#/complete', ng-class='{active: isActive("/complete")}') Completed
        span.count {{completeCount}}
  h1.list-title to do list